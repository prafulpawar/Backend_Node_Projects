const http = require('http');
const server = http.createServer((req,res)=>{
        if(req.url === '/'){
            res.end("HomePage")
        }
        else if(req.url ==="/contact"){
            res.end("ContactPage")
        }
})

server.listen(3000,()=>{

    console.log(`Server Is Runnning On Port ${3000}`)
})